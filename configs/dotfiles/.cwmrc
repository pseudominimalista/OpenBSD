#### Grupos/Áreas de trabalho ####

sticky yes

bind-key 4-1		group-only-1
bind-key 4-2		group-only-2
bind-key 4-3		group-only-3
bind-key 4-4		group-only-4
bind-key 4-0		group-toggle-all

bind-key M-1		window-movetogroup-1		
bind-key M-2		window-movetogroup-2		
bind-key M-3		window-movetogroup-3	
bind-key M-4		window-movetogroup-4		

