unbind-key			CM-equal
unbind-key			CMS-equal
unbind-key			M-question
unbind-key			M-period
unbind-key			CM-w
unbind-key			CM-g
unbind-key			CMS-s
unbind-key			CM-s
unbind-key			CM-f
