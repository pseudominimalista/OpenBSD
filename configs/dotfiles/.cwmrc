bind-key M4-c		xcalc

#
#	Mouse  
#
#	C = Ctrl
#	M = Alt
#	S = Shift
#	4 = Super
#
#	1 = Botão esquerdo 
#	2 = Botão do meio 
#	3 = Botão direito
#

unbind-mouse		1
unbind-mouse		2
unbind-mouse		3
unbind-mouse		M-1
unbind-mouse		M-2
unbind-mouse		M-3

bind-mouse 4-1		window-move
bind-mouse 4-3 		window-resize
